<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_safe_word_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Safe Word 1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_safe_word_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_safe_word_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Safe Word 2"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_safe_word_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text_sensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sensitivity"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_sensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="1"
            android:valueTo="100"
            android:stepSize="1" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_include_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/include_location" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_play_siren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_siren" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_test_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_mode" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginTop="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_run_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/run_test"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>

