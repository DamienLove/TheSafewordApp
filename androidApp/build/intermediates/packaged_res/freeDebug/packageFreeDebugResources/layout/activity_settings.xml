<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:contentInsetStartWithNavigation="0dp"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_nav_back"
            app:title="@string/settings"
            app:titleTextColor="@color/safeword_on_surface" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_option"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_action_safe_words_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@android:color/white" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_safe_word_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/safe_word_one_hint"
                    app:hintTextColor="@color/safeword_on_surface_variant">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_safe_word_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/safeword_on_surface" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_safe_word_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/second_safe_word"
                    app:hintTextColor="@color/safeword_on_surface_variant">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_safe_word_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/safeword_on_surface" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_option_green"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_sensitivity_label"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/text_sensitivity_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="#CCFFFFFF" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_sensitivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:valueFrom="1"
                    android:valueTo="100"
                    android:stepSize="1" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_option"
                android:orientation="vertical"
                android:padding="24dp">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_include_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/include_location"
                    android:textColor="@color/safeword_on_surface" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_play_siren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/play_siren"
                    android:textColor="@color/safeword_on_surface" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_test_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/test_mode"
                    android:textColor="@color/safeword_on_surface" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/save"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_run_test"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/run_test"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
